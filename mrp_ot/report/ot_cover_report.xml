<odoo>
<data>

    <!-- Reporte Caratula de OT -->
    <template id="ot_cover_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center><h1>Orden de Trabajo</h1></center>
                    <p>Codigo <span t-field="docs.product_id.default_code"/></p>
                    <p>Pieza <span t-field="docs.product_id.name"/></p>
                    <p>Materia Prima</p>
                    <p>Fecha Emision</p>
                    <p>Fecha Necesidad</p>
                    <h3>Cantidad a fabricar</h3>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Std (Pzas/h)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">

                                <tr style="font-weight: bold;">
                                    <td>
                                        <span t-field="o.product_tmpl_id.display_name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.product_qty"/>
                                        <span groups="product.group_uom" t-field="o.product_uom_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.code"/>
                                    </td>
                                </tr>

                                <tr t-foreach="get_children(o.bom_line_ids)" t-as="l">
                                    <td style="padding-left: 20px;">
                                        <span style="color: white;" t-esc="'... '*(l['level'])"/>
                                        <span t-esc="l['pname']"/>
                                    </td>
                                    <td>
                                        <span t-esc="l['pqty']"/>
                                        <span t-esc="l['uname']" groups="product.group_uom"/>
                                    </td>
                                    <td>
                                        <span t-esc="l['code']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>


<!--
                    <p>Codigo <span t-esc="product_id.default_code"/></p>
                    <p>Nombre <span t-esc="product_id.name"/></p>
                    <t t-foreach="docs" t-as="o">
                        <span t-esc="o['campo1']"/>
                    </t>
                    -->
                </div>

                <t t-foreach="attachs" t-as="i">
                    <div class="page">
                        <p style="page-break-before:always;"> </p>
                        <span t-field="i.datas"
                              t-options="{'widget':'image'}"
                              class="media-object"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report action-->
    <report id="action_ot_cover_report"
        string="Caratula de OT"
        model="mrp.bom"
        report_type="qweb-html"
        name="mrp_ot.ot_cover_report_template"
        file="mrp_ot.ot_cover_report_template"
        menu="False"
    />

    <!--
    groups="user_group"
    attachment="object.state == 'done' and 'something.pdf'"
    multi="False"
    -->

</data>
</odoo>
