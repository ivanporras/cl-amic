<odoo>
    <data>

        <record id="mrp_wizard_model_view_form_1" model="ir.ui.view">
            <field name="name">MRP EASY PROD wizard 1</field>
            <field name="model">mrp.wizard</field>
            <field name="priority" eval="2" />
            <field name="arch" type="xml">
                <form string="Select event to register">
                    <field name="state" invisible="1"/>
                    <group>
                        <field name="workcenter_id" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="work_order_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>

                    <footer>
                        <button name="next" type="object" string="SIGUIENTE" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
