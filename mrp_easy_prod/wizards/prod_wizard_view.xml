<odoo>
    <data>

        <record id="mrp_wizard_model_view_form" model="ir.ui.view">
            <field name="name">MRP EASY PROD the wizard</field>
            <field name="model">mrp.wizard</field>
            <field name="arch" type="xml">
                <form string="Select event to register">
                    <field name="state" invisible="1"/>

                    <group attrs="{'invisible':[('state', '!=', '01')]}">
                        <h1>
                            <center>Identificar el centro productivo</center>
                        </h1>
                    </group>

                    <group attrs="{'invisible':[('state', '!=', '02')]}">
                        <h1>
                            <center>Identificar el operador</center>
                        </h1>
                    </group>

                    <footer>
                        <button name="next" type="object" string="SIGUIENTE"
                                class="oe_highlight"/>
                        or
                        <button special="cancel"
                                string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
