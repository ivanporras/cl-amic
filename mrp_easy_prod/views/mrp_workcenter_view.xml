<?xml version="1.0"?>
<odoo>
    <record id="mrp_workcenter_view" model="ir.ui.view">
        <field name="name">MRP_OT agregar planta al workcenter</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='capacity']" position="after">
                <group name="plant" string="Planta">
                    <field name="warehouse_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="mrp_workcenter_tree_view" model="ir.ui.view">
        <field name="name">MRP_OT agregar planta al tree de workcenter</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="warehouse_id"/>
            </xpath>
        </field>
    </record>

</odoo>
